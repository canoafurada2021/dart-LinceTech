import 'dart:math' as math;
//6 — Escreva um programa que receba uma lista de números inteiros e imprima no console em 
  //ordem crescente os números representados na forma decimal, binaria, octal e hexadecimal.

void main() {
  final numeros = [3, 15, 20, 50, 102, 34023949349];

  showNumbers(numeros);
}

void showNumbers(List<int> numbers) {
  for (final brasilEHexa in numbers) {
    print('decimal: $brasilEHexa');
    print("Binário: ${brasilEHexa.toRadixString(2)}");
    print("Hexadecimal: ${brasilEHexa.toRadixString(16)}");
    print("Octal: ${brasilEHexa.toRadixString(8)}");
  }
}
